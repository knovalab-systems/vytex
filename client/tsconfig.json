{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"outDir": "./dist",

		/* Linting */
		"strict": true,
		"lib": ["DOM"]
	},
	"include": ["src" ],
	"typedocOptions": {
		"entryPoints": ["./src/client.ts", "./src/*/index.ts"]
	}
}
